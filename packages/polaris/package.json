{
    "name": "@galaxyproject/polaris",
    "version": "0.0.0",
    "type": "module",
    "license": "MIT",
    "files": [
        "static"
    ],
    "scripts": {
        "dev": "npm run build && vite",
        "build": "npm run build:pyodide && npm run build:python && vite build",
        "build:pyodide": "node pyodide.install.js",
        "build:python": "npm run build:polaris && npm run build:polaris-dataset-report",
        "build:polaris": "cd polaris && rm -rf build dist polaris.egg-info && python -m build --wheel",
        "build:polaris-dataset-report": "cd polaris_dataset_report && rm -rf build dist *.egg-info && python -m build --wheel",
        "preview": "vite preview",
        "prettier": "prettier --config ./prettier.config.js --write './*.{js,ts,json}' 'src/**/*.{js,ts,json,css,vue}'",
        "test": "npm run test:unit && npm run test:python",
        "test:python": "cd polaris && python -m pytest tests/ -v --import-mode=importlib",
        "test:ui": "vitest --ui",
        "test:unit": "vitest run",
        "test:watch": "vitest --watch"
    },
    "devDependencies": {
        "@heroicons/vue": "^2.2.0",
        "@rollup/plugin-yaml": "^4.1.2",
        "@tailwindcss/typography": "^0.5.19",
        "@tailwindcss/vite": "^4.1.18",
        "@types/markdown-it": "^14.1.2",
        "@types/node": "^22.9.0",
        "@vitejs/plugin-vue": "^6.0.3",
        "@vitest/ui": "^4.0.16",
        "@vue/test-utils": "^2.4.6",
        "@vueuse/core": "^14.1.0",
        "galaxy-charts-xml-parser": "^1.0.3",
        "happy-dom": "^20.0.11",
        "markdown-it": "^14.1.0",
        "mermaid": "^11.12.2",
        "prettier": "^3.7.4",
        "pyodide": "^0.29.0",
        "svg-pan-zoom": "^3.6.2",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3",
        "vega-embed": "^7.1.0",
        "vite": "^7.3.0",
        "vite-plugin-static-copy": "^3.1.4",
        "vitest": "^4.0.16",
        "vue": "^3.5.26"
    }
}
